// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId  String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("bloxadmin_Account")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("bloxadmin_Session")
}

model User {
  id            String     @id @default(cuid())
  name          String?
  email         String     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  disabled      Boolean    @default(false)
  role          UserRole   @default(COLLABORATOR)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  createdBy     String?
  updatedBy     String?
  creator       User?      @relation("UserCreator", fields: [createdBy], references: [id])
  updater       User?      @relation("UserUpdater", fields: [updatedBy], references: [id])
  createdUsers  User[]     @relation("UserCreator")
  updatedUsers  User[]     @relation("UserUpdater")
  accounts      Account[]
  sessions      Session[]
  documents     Document[]
  createdDocuments Document[] @relation("DocumentCreator")
  updatedDocuments Document[] @relation("DocumentUpdater")
  auditLogs     AuditLog[]

  @@map("bloxadmin_User")
}

enum UserRole {
  ADMIN
  COLLABORATOR
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, token])
  @@map("bloxadmin_VerificationToken")
}

enum EmbeddingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Document {
  id              String          @id @default(cuid())
  name            String
  description     String
  category        String
  fileUrl         String
  fileType        String?
  uploadDate      DateTime        @default(now())
  lastEdited      DateTime        @updatedAt
  userId          String?
  user            User?           @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdBy       String?
  updatedBy       String?
  creator         User?           @relation("DocumentCreator", fields: [createdBy], references: [id])
  updater         User?           @relation("DocumentUpdater", fields: [updatedBy], references: [id])
  embeddingStatus EmbeddingStatus @default(PENDING)

  @@map("bloxadmin_Document")
}

model AuditLog {
  id        String   @id @default(cuid())
  tableName String
  recordId  String
  action    String   // CREATE, UPDATE, DELETE
  oldValues Json?
  newValues Json?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("bloxadmin_AuditLog")
}
